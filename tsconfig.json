{
    "compilerOptions": {
      "lib": ["ES2019"],
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "allowJs": true,
      "declaration": true,
      "skipLibCheck": true,
      "target": "ES2019",
      "module": "CommonJS",
      "outDir": "dist"
    },
    "include": ["src/**/*.ts"]
  }
  